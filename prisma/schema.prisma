// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  gameId  String  @unique @map("game_id")
  title   String
  code    String
  exposed Boolean @default(false)

  @@map("ticket")
}

model User {
  id String @id @default(cuid())

  yellowQuiz YellowQuiz?
  pieyon     Pieyon?

  @@map("user")
}

// Challenges

model YellowQuiz {
  userId String @id @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  completed Boolean @default(false)

  currentQuiz Int @default(0) @map("current_quiz")

  @@map("yellow_quiz")
}

model Pieyon {
  userId String @id @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  completed Boolean @default(false)

  heartbeats    Int      @default(0)
  lastHeartbeat DateTime @default("1970-01-01T00:00:00Z") @map("last_heartbeat")

  @@map("pieyon")
}
